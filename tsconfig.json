{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "erasableSyntaxOnly": true,
    "isolatedDeclarations": true,
    "declarationDir": "./types",
    "resolveJsonModule": true,
    "rootDir": "./",
    "jsx": "preserve",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": false,
    "paths": {
      "@wai-ri/core": [
        "./packages/core/index.ts"
      ],
      "@wai-ri/core/*": [
        "./packages/core/*"
      ],
      "@wai-ri/random": [
        "./packages/core/index.ts"
      ],
      "@wai-ri/random/*": [
        "./packages/core/*"
      ],
      "@wai-ri/shared": [
        "./packages/shared/index.ts"
      ],
      "@wai-ri/shared/*": [
        "./packages/shared/*"
      ],
      "@wai-ri/react": [
        "./packages/react/index.ts"
      ],
      "@wai-ri/react/*": [
        "./packages/react/*"
      ],
      "@wai-ri/vue": [
        "./packages/vue/index.ts"
      ],
      "@wai-ri/vue/*": [
        "./packages/vue/*"
      ],
      "@wai-ri/d3": [
        "./packages/d3/index.ts"
      ],
      "@wai-ri/d3/*": [
        "./packages/d3/*"
      ],
      "@wai-ri/echarts": [
        "./packages/echarts/index.ts"
      ],
      "@wai-ri/echarts/*": [
        "./packages/echarts/*"
      ],
    },
    "types": [
      "vitest/globals",
      "ts-lib-enhance",
    ]
  },
  "include": [
    "eslint.config.js",
    "packages",
    "vitest.config.js",
  ],
  "exclude": [
    "node_modules",
    "**/**/*.stories.tsx",
    "**/**/*.md",
    "**/dist",
    "packages/.test",
    "packages/_docs"
  ]
}